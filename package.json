{
  "name": "express-typescript-boilerplate",
  "version": "1.0.0",
  "description": "Express typescript boilerplate - Mattecurve",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc && npm run copy-package && npm run copy-config",
    "build:prod": "npm run build",
    "clean": "shx rm -rf ./dist",
    "copy-package": "shx cp ./package.json ./dist/ && shx cp ./package-lock.json ./dist/",
    "copy-config": "shx cp -R ./src/config/* ./dist/config/",
    "live-reload": "nodemon -e js",
    "test": "NODE_ENV=testing mocha",
    "lint": "eslint . --ext .ts",
    "start": "cd dist && node index.js",
    "dev": "tsc --project './tsconfig.json' --watch & NODE_ENV=development cd dist && nodemon",
    "dev:cluster": ""
  },
  "author": "onkar@mattecurve.com",
  "license": "ISC",
  "dependencies": {
    "bluebird": "^3.7.2",
    "body-parser": "^1.20.0",
    "chai": "^4.3.6",
    "compression": "^1.7.4",
    "config": "^3.3.7",
    "cors": "^2.8.5",
    "express": "^4.17.3",
    "express-jwt": "^6.1.1",
    "express-winston": "^4.2.0",
    "joi": "^17.6.0",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.21",
    "luxon": "^2.3.1",
    "mime-types": "^2.1.35",
    "mocha": "^9.2.2",
    "mongoose": "^6.2.10",
    "pm2": "^5.2.0",
    "reflect-metadata": "^0.1.13",
    "winston": "^3.7.2"
  },
  "devDependencies": {
    "@types/chai": "^4.3.0",
    "@types/compression": "^1.7.2",
    "@types/config": "^0.0.41",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/mime-types": "^2.1.1",
    "@types/mocha": "^9.1.0",
    "@types/mongoose": "^5.11.97",
    "@typescript-eslint/eslint-plugin": "^5.18.0",
    "@typescript-eslint/parser": "^5.18.0",
    "eslint": "^8.12.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.0.0",
    "nodemon": "^2.0.15",
    "prettier": "^2.6.2",
    "shx": "^0.3.4",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.3"
  }
}
